    <script>
        window.ro = {{.Ro}};
        window.extraPath = {{.ExtraPath}}.slice(0, -1);
        window.onload = function () { js_will_be_here };

        function setTheme(themeName) {
            window.localStorage.setItem('setTheme', themeName);
            const themes = {
                light: {
                    '--redPlum': '#777',
                    '--goldCanyon': '#000040',
                    '--chestnutBrown': '#846868',
                    '--darkOnyx': '#fff',
                },
                dark: {
                    '--redPlum': '#782B42',
                    '--goldCanyon': '#C6AC7E',
                    '--chestnutBrown': '#875943',
                    '--darkOnyx': '#373539',
                },
                retro: {
                    '--redPlum': '#782B42',
                    '--goldCanyon': '#C6AC7E',
                    '--chestnutBrown': '#875943',
                    '--darkOnyx': '#373539',
                },
            };
            Object.keys(themes[themeName]).forEach((key) => {
                document.documentElement.style.setProperty(key, themes[themeName][key]);
            });
        }

        window.onload = () => {
            if (window.localStorage.getItem('setTheme')) {
                setTheme(window.localStorage.getItem('setTheme'));
            }
        };
    </script>
</head>

